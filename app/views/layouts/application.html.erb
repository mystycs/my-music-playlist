<!DOCTYPE html>
<html>
  <head>
    <title>MyMusicPlaylist</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>

  <body>
  <%= render 'layouts/header' %>
 <div class="container">
   <div class="row">
     <%= content_tag(:div, flash[:error], :class => "alert alert-warning") if flash[:error] %>
     <%= content_tag(:div, flash[:notice], :class => "alert alert-success") if flash[:notice] %>
     <%= content_tag(:div, flash[:alert], :class => "alert alert-danger") if flash[:alert] %>
     <div id="printAlert"></div>
     <div class="col-md-1"></div>
     <div class="col-md-10">
       <div class="jumbotron"><%= yield %>
       </div>
     </div>
     <div class="col-md-1"></div>
   </div>
 </div>
  </body>
</html>
